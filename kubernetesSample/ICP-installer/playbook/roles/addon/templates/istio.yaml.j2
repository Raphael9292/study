apiVersion: v1
kind: Secret
metadata:
  name: grafana
  namespace: istio-system
  labels:
    app: grafana
type: Opaque
data:
  username: {{ istio_addon.grafana.username | b64encode }}
  passphrase: {{ istio_addon.grafana.passphrase | b64encode }}
